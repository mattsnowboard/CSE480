{% extends "base-template.html.twig" %}

{% block main %}
	
    <section id="userInfo">
        <h1>Player Information</h1>
        <ul>
            <li>Your Score: {{ user.totalScore }}</li>
        </ul>
    </section>

	<section id="welcome-options">
		<a href="{{ path('create_single_player') }}" class="start-1player-game-button btn btn-large" title="Start 1-Player Game">Start 1-Player Game</a>
		<a href="#"  class="send-challenge-button btn btn-large" title="Send a Challenge">Send a Challenge</a>
	</section>
	
	<section id="challenges">
		<h2>Challenges</h2>
		<ul>
			{% for challenge in recievedChallenges %}
				<li>Challenge from {{challenge.challengerId}} <a href="#" class="start-1player-game-button btn btn-small">Accept</a> <a href="#" class="start-1player-game-button btn btn-small">Deny</a> </li>
				{% else %}
					<li> No challenges </li>
			{% endfor %}
	</section>
	
	<section id="gamelist">
		<h2>Games in Progress</h2>
		<ul>
			{% for game in games %}
				<li><a href="{{path("single_player", {'id':game.id})}}">Game {{ game.id}}</a>:
                    Current state: {{game.currentState}} (Score: {{game.score1}})</li>
				{% else %}
					<li> No games </li>
			{% endfor %}
		</ul>
	</section>
	
	<section id="leaderboard">
		<h2><a href="{{path("leaderboard")}}">Words with Strangers Leaderboard</a></h2>
	</section>

{% endblock %}